@model Property

@{
    ViewData["Title"] = "Create Property";
}

<h4>@ViewData["Title"]</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form class="row g-3" asp-controller="Property" asp-action="CreateOne" method="post">
            <div class="col-md-6">
                <label for="Address" class="form-label">Address</label>
                <input type="text" class="form-control" id="Address" asp-for="Address">
                <span asp-validation-for="Address" class="errMsg"></span>
            </div>
            <div class="col-md-6">
                <label for="Price" class="form-label">Price</label>
                <input type="text" class="form-control" id="Price" asp-for="Price">
                <span asp-validation-for="Price" class="errMsg"></span>
            </div>

            <div class="col-6">
                <label for="Location" class="form-label">Location</label>
                <input type="text" class="form-control" id="Location" asp-for="Location">
                <span asp-validation-for="Location" class="errMsg"></span>
            </div>
            <div class="col-md-6">
                <label for="Status" class="form-label">Status</label>
                <select id="Status" class="form-select" asp-for="Status" asp-items="Html.GetEnumSelectList<EnumStatus>()">
                    <option value="" selected>Choose...</option>
                </select>
                <span asp-validation-for="Status" class="errMsg"></span>
            </div>
            <div class="col-md-6">
                <label for="Category_id" class="form-label">Category_id</label>
                <select id="Category_id" class="form-select" asp-for="Category_id">
                    <option value="" selected>Choose...</option>
                    <option value="1">Single House</option>
                    <option value="5">Apartment</option>
                    <option value="3">Condo</option>
                    <option value="6">Cottagge</option>
                </select>
                <span asp-validation-for="Category_id" class="errMsg"></span>
            </div>
            <div class="col-md-6">
                <label for="Owner_id" class="form-label">Owner_id</label>
                <input type="text" class="form-control" id="Owner_id" asp-for="Owner_id" value="@User.Identity.Name" readonly>
            </div>

            <div class="col-md-12">
                <label for="Description" class="form-label">Description</label>
                <textarea type="text" class="form-control" id="Description" asp-for="Description" rows="8">
                    </textarea>
                <span asp-validation-for="Description" class="errMsg"></span>
            </div>
 
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Sell">Back to List</a>
</div>